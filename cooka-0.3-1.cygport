inherit mono

DESCRIPTION="Simple Gtk# image viewer"
HOMEPAGE="http://laas.altervista.org/cooka/ckaindex.php"
SRC_URI=http://laas.altervista.org/${PN}/${P}_src.tar.gz

src_compile() {
	lndirs
	cd ${B}
	cygmake -f Makefile.solution.cooka
}

src_install() {
	cd ${B}
	exeinto /usr/lib/cooka
	doexe build/Cooka.exe

	mono_wrapper ${PN} /usr/lib/cooka/Cooka.exe
}
